<Page x:Class="WpfApp1.Page6"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page6">

    <Grid>
        <DataGrid x:Name="gridCombination" AutoGenerateColumns="False" Height="405" VerticalAlignment="Top" Margin="0,45,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Первый VIN" Binding="{Binding vin1}" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Header="Второй VIN" Binding="{Binding vin2}" Width="200"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="Добавление" Background="White" FontSize="20" HorizontalAlignment="Left" Margin="18,10,0,0" VerticalAlignment="Top" Width="140" Height="30"/>
        <Button Content="Удаление" Background="White" FontSize="20" HorizontalAlignment="Left" Margin="218,10,0,0" VerticalAlignment="Top" Width="140" Height="30"/>
    </Grid>
</Page>
